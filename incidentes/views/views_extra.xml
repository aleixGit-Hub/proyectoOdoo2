    <!-- ====================================================================
         VISTA BÃšSQUEDA AVANZADA
    ==================================================================== -->
    <record id="view_parte_search" model="ir.ui.view">
        <field name="name">parte.search</field>
        <field name="model">parte</field>
        <field name="arch" type="xml">
            <search string="Buscar Partes">
                <field name="alumno_id"   string="Alumno"/>
                <field name="profesor_id" string="Profesor"/>
                <field name="grupo_id"    string="Grupo"/>
                <field name="ubicacion"   string="UbicaciÃ³n"/>
                <field name="name"        string="Referencia"/>
                <field name="motivo"      string="Motivo"/>

                <separator/>
                <filter name="pendientes_llamar" string="ğŸŸ  Pendiente Contactar"
                        domain="[('gravedad', '=', 'pendiente_llamar')]"/>
                <filter name="llamados" string="ğŸŸ¢ Contactado"
                        domain="[('gravedad', '=', 'llamado')]"/>
                <filter name="cerrados" string="âš« Cerrado"
                        domain="[('gravedad', '=', 'cerrado')]"/>

                <separator/>
                <filter name="con_expulsion" string="ğŸš¨ Con ExpulsiÃ³n"
                        domain="[('tiene_expulsion', '=', True)]"
                        groups="incidentes.group_parte_manager"/>

                <separator/>
                <filter name="etapa_eso"       string="ESO"
                        domain="[('grupo_id.etapa', '=', 'eso')]"/>
                <filter name="etapa_bachiller"  string="Bachillerato"
                        domain="[('grupo_id.etapa', '=', 'bachiller')]"/>
                <filter name="etapa_fp_basica"  string="FP BÃ¡sica"
                        domain="[('grupo_id.etapa', '=', 'fp_basica')]"/>
                <filter name="etapa_ciclos"     string="Ciclos Formativos"
                        domain="[('grupo_id.etapa', '=', 'ciclos')]"/>

                <separator/>
                <filter name="trimestre_1" string="1er Trimestre (Sepâ€“Dic)"
                        domain="[
                            ('fecha_hora', '&gt;=', (context_today() + relativedelta(month=9,  day=1)).strftime('%Y-%m-%d')),
                            ('fecha_hora', '&lt;',  (context_today() + relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="trimestre_2" string="2Âº Trimestre (Eneâ€“Mar)"
                        domain="[
                            ('fecha_hora', '&gt;=', (context_today() + relativedelta(month=1, day=1)).strftime('%Y-%m-%d')),
                            ('fecha_hora', '&lt;',  (context_today() + relativedelta(month=3, day=31)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="trimestre_3" string="3er Trimestre (Abrâ€“Jun)"
                        domain="[
                            ('fecha_hora', '&gt;=', (context_today() + relativedelta(month=4, day=1)).strftime('%Y-%m-%d')),
                            ('fecha_hora', '&lt;',  (context_today() + relativedelta(month=6, day=30)).strftime('%Y-%m-%d'))
                        ]"/>

                <separator/>
                <filter name="hoy" string="Hoy"
                        domain="[('fecha_hora', '&gt;=', context_today().strftime('%Y-%m-%d')),
                                 ('fecha_hora', '&lt;',  (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>

                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter name="grupo_by_grupo"    string="Grupo"          context="{'group_by': 'grupo_id'}"/>
                    <filter name="grupo_by_alumno"   string="Alumno"         context="{'group_by': 'alumno_id'}"/>
                    <filter name="grupo_by_profesor" string="Profesor"       context="{'group_by': 'profesor_id'}"/>
                    <filter name="grupo_by_gravedad" string="Estado"         context="{'group_by': 'gravedad'}"/>
                    <filter name="grupo_by_motivo"   string="Motivo"         context="{'group_by': 'motivo'}"/>
                    <filter name="grupo_by_mes"      string="Mes"            context="{'group_by': 'fecha_hora:month'}"/>
                    <filter name="grupo_by_trimestre" string="Trimestre"     context="{'group_by': 'fecha_hora:quarter'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- ====================================================================
         VISTA KANBAN
    ==================================================================== -->
    <record id="view_parte_kanban" model="ir.ui.view">
        <field name="name">parte.kanban</field>
        <field name="model">parte</field>
        <field name="arch" type="xml">
            <kanban default_group_by="gravedad" class="o_kanban_small_column" sample="1">
                <field name="alumno_id"/>
                <field name="grupo_id"/>
                <field name="gravedad"/>
                <field name="tiene_expulsion"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click
                            #{record.tiene_expulsion.raw_value ? 'border border-danger' : ''}">
                            <div class="oe_kanban_content">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <strong class="o_kanban_record_title">
                                        <field name="alumno_id"/>
                                    </strong>
                                    <span t-if="record.tiene_expulsion.raw_value"
                                          class="badge badge-pill badge-danger">ğŸš¨</span>
                                </div>
                                <div class="text-muted small">
                                    Grupo: <field name="grupo_id"/>
                                </div>
                                <hr class="mt-1 mb-1"/>
                                <div class="text-center">
                                    <span t-if="record.gravedad.raw_value == 'pendiente_llamar'"
                                          class="badge badge-warning">ğŸŸ  Pendiente Contactar</span>
                                    <span t-elif="record.gravedad.raw_value == 'llamado'"
                                          class="badge badge-success">ğŸŸ¢ Contactado</span>
                                    <span t-else=""
                                          class="badge badge-secondary">âš« Cerrado</span>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


